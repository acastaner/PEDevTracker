@model List<PEDevTracker.Models.DevPost>
@{
    ViewBag.Title = "Home Page";
    
}
@section featured {
    <section class="featured">
        <div class="content-wrapper">
            <hgroup class="title">
                <h1>@ViewBag.Title.</h1>
                <h2>@ViewBag.Message</h2>
            </hgroup>
            <p>
                To learn more about ASP.NET MVC visit
                <a href="http://asp.net/mvc" title="ASP.NET MVC Website">http://asp.net/mvc</a>.
                The page features <mark>videos, tutorials, and samples</mark> to help you get the most from ASP.NET MVC.
                If you have any questions about ASP.NET MVC visit
                <a href="http://forums.asp.net/1146.aspx/1?MVC" title="ASP.NET MVC Forum">our forums</a>.
            </p>
        </div>
    </section>
}
<h3>Dev Posts Found:</h3>

@foreach (PEDevTracker.Models.DevPost devPost in Model)
{
    <div style="border:1px solid black">
        <ul>
            <li>Posted by: @devPost.Author</li>
            <li>Retrieved on: @devPost.RetrieveDate.ToShortDateString() at @devPost.RetrieveDate.ToShortTimeString()</li>
            <li><a href="@devPost.Uri" target="_blank">Go to post</a></li>
        </ul>
        @Html.Raw(devPost.Content)

    </div>
}
