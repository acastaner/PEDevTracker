@model PEDevTracker.Models.DevPost
<p>~~~~~~</p>
    <div>
        <div class="row">
            Posted by <a href="@Model.Author.GetProfileUri()" target="_blank">@Model.Author.DisplayName</a> on @Model.Date.ToShortDateString() @Model.Date.ToShortTimeString()
        </div>
        <div class="row">
            <span class="dev-post-quote-text">@Html.Raw(Model.Content)</span>
        </div>
        <div class="row">
            Retrieved on: @Model.RetrieveDate.ToShortDateString() at @Model.RetrieveDate.ToShortTimeString()
            <a href="@Model.Uri" target="_blank">Source</a> | <a href="#">Permalink</a>
        </div>
    </div>